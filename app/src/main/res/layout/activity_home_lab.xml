<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center"
    tools:context=".HomeLabActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="What do you want to do in the lab?"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/preparingButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Prepare the samples"
        android:textSize="18sp"
        android:layout_marginBottom="15dp"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/weighingButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Weight samples"
        android:textSize="18sp"
        android:layout_marginBottom="15dp"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/extractionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Extract samples"
        android:textSize="18sp"
        android:layout_marginBottom="15dp"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/aliquotingButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Make aliquots"
        android:textSize="18sp"
        android:layout_marginBottom="15dp"
        tools:ignore="HardcodedText" />

</LinearLayout>
